{
  // Python related settings
  // "python.defaultInterpreterPath": "./.venv/bin/python",
  // "python.terminal.activateEnvironment": true,

  // Ruff formatter settings
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // Ruff extension settings - latest method
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.configuration": "./pyproject.toml",
  "ruff.importStrategy": "fromEnvironment",

  // Python analysis settings
  // "python.analysis.typeCheckingMode": "basic",
  // "python.analysis.autoImportCompletions": true,
  // "python.analysis.fixAll": [
  //   "source.unusedImports"
  // ],
  // Other settings
  "files.associations": {
    "*.py": "python",
    "pyproject.toml": "toml"
  },
  // GitHub Copilot settings for commit message generation
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Write the first line in a format like Feature: ***, Fix: ***, or Refactor: *** (Write in words that are often used in commit messages)."
    },
    {
      "text": "Leave the second line as a blank line."
    },
    {
      "text": "From the third line onwards, write a clear but concise description that sufficiently reflects the changes. At this time, please explain in detail what the changes are, why they were made, and how they were implemented. Write in '- ***' format."
    },
    {
      "text": "Finally, always write commits in English."
    }
  ]
}
